{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["ESNext"],
    "outDir": "dist",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "ES2018",
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}